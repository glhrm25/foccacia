<section class="container p-2">
<h2> List of Groups: </h2>

<!-- Show a task in each row of a table -->
<table class="table text-nowrap">
    <tr>
        <th> Name </th> 
        <th> Description </th>
        <th> </th>
        <th> </th>
    </tr>
    {{#each groups}}
    <tr>
        <td> {{this.name}} </td>
        <td> {{this.description}} </td> 
        <td width="5%">
            <a href="/site/groups/{{this.id}}" class="btn btn-warning"> Edit </a>
        </td>
        <td width="5%">
            <form action="/site/groups/{{this.id}}/delete" method="POST">
                <input type="submit" value="del" class="btn btn-danger">
            </form>
        </td>
    </tr>
    {{/each}}
</table>
</section>